<h1>Welcome to Online Meetups</h1>
{{#if user}}
<p>You are logged in...</p>
{{else}}

<div class="row">
    <div class="col-sm-4">
        <h1 class="center">
            <a href="/auth/facebook">
                <button type="button" class="btn btn-primary btn-lg rounded-pill">Login with <i class="fab fa-facebook-square"></i></button>
            </a>
        </h1>
        <h1 class="center">
            <a href="/auth/google">
                <button type="button" class="btn btn-danger btn-lg rounded-pill">Login with <i class="fab fa-google"></i></button>
            </a>
        </h1>
        <p class="center">or</p>
        Login with:
        <form action="/login" method="POST">
            {{#each success}}
            <p class="green">{{text}}</p>
            {{/each}}
            {{#each errors}}
            <p class="red">{{text}}</p>
            {{/each}}
            <div class="form-group mt-3">
                <label for="email"><i class="fas fa-at"></i>Email</label>
                <input type="text" name="email" id="email" class="form-control">
            </div>
            <div class="form-group mt-3">
                <label for="password"><i class="fas fa-key"></i>Password</label>
                <input type="password" name="password" id="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-info btn-lg text-light rounded-pill mt-3">Login <i class="fas fa-sign-in-alt"></i></button>
        </form>
        <a href="/newAccount" class="mt-3">Create your Account</a>
    </div>
</div>


{{/if}}